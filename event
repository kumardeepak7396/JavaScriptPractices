// Practice question
// Ques 01 - Create a toggle button that change the screen to dark mode when clicked and light mode 
// when clicked again.
// solution : 

// let button = document.querySelector("button");

// button.addEventListener("click", () => {
//     button.innerText = button.innerText === "OFF" ? "ON" : "OFF";
    
//     if (button.innerText === "ON"){
//       document.body.style.backgroundColor = "white"  
//     }
//     else {
//         document.body.style.backgroundColor = "rgba(0, 0, 0, 0.821)" 
//     }
//     });


let button = document.querySelector("button");
button.addEventListener("click", () => {
     button.innerText = button.innerText === "Dark Mode" ? "Light Mode" : "Dark Mode";
    
    if (button.innerText === "Light Mode"){
      document.querySelector("body").setAttribute("class","light")
     }
     else {
          document.querySelector("body").setAttribute("class","dark")
     }
     });
